<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
	
	<style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
	<style name="MainTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
	
    <style name="button_style">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">17dip</item>
        <item name="android:textColor">#36CAC3</item>
		<item name="android:paddingTop">4dip</item>
		<item name="android:paddingBottom">4dip</item>	
		<item name="android:minHeight">5dip</item>
		<item name="android:minWidth">5dip</item>
        <item name="android:background">@drawable/button_plain</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="button_style_pressed">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">17dip</item>
        <item name="android:textColor">#FFFFFF</item>
		<item name="android:paddingTop">4dip</item>
		<item name="android:paddingBottom">4dip</item>	
		<item name="android:minHeight">5dip</item>
		<item name="android:minWidth">5dip</item>
        <item name="android:background">@drawable/button_plain</item>
        <item name="android:textAllCaps">false</item>
    </style>
	<style name="scan_list">
		<item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:textSize">17dip</item>
		<item name="android:textColor">#36CAC3</item>
		<item name="android:paddingTop">2dip</item>
		<item name="android:paddingBottom">2dip</item>
		<item name="android:minHeight">5dip</item>
		<item name="android:minWidth">5dip</item>
		<item name="android:background">@drawable/button_plain</item>
		<item name="android:textAllCaps">false</item>
	</style>
</resources>
