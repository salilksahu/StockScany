<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:id="@+id/layoutStockItem"
    android:background="@drawable/rec_rounded">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <RelativeLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3">
            <TextView
                android:id="@+id/txtSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="ICICIBANKDJNX"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="#4682B4" />               
            <TextView
                android:id="@+id/txtStockPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="203.50"
                android:gravity="right"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/txtStockPricePer"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="right"/>
            <TextView
                android:id="@+id/txtStockPricePer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  [+1.5%]"                    
                android:textSize="14dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#1D8348" />  
        </RelativeLayout>
        
        <TableLayout
            android:layout_marginTop="2dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" 
            android:id="@+id/tableLayout2">
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">                
                <TextView
                    android:text="Open  200.3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"                    
                    android:id="@+id/textStockOpen"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="13dp"/>                
                <TextView
                    android:text="High  200.3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/textStockHigh"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="13dp"                    
                    android:layout_gravity="center_horizontal"/>                
                <TextView
                    android:text="Low  200.3 "
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/textStockLow"
                    android:textSize="13dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center_horizontal"/>                
                <TextView
                    android:text="Close  200.3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="2dp"
                    android:id="@+id/textStockClose"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="13dp"/>               
            </TableRow>            
        </TableLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:id="@+id/rlinearLayout2" >        
            <TextView
                android:id="@+id/txtTrdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trade Value 40.45 Cr"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:textSize="14dp"/>
            <TableLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*" 
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/tableLayout3">
                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_height="wrap_content"                
                    android:layout_width="wrap_content">
                    <ImageButton
                        android:text="Show Chart"
                        android:id="@+id/btnShowChart"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:src="@drawable/chart"      
                        android:scaleType="centerInside"
                        android:background="#FFFFFF"
                        />
                    <ImageButton
                        android:text="Add to watchlist"
                        android:id="@+id/btnAddWatch"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:background="#FFFFFF"
                        android:scaleType="centerInside"
                        android:src="@drawable/add"/>
                </TableRow>            
            </TableLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>   
