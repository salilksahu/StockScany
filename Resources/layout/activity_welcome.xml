<?xml version="1.0" encoding="utf-8"?>
<ScrollView    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E8E8E8"
    android:id="@+id/scrollView1" >
<LinearLayout    
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">        
    <LinearLayout
        android:orientation="vertical"
        android:background="#E8E8E8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="3dp"                
        android:id="@+id/linearLayout5" >
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5647159582339728/7038886183">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <TextView
        android:text="Last Update: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"  
        android:paddingLeft="10dp"
        android:textSize="13dp"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/txtLastUpdate"
        android:background="@drawable/rec_rounded" />

    <RelativeLayout
        android:background="@drawable/rec_rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:id="@+id/linearLayout1">
            <TextView
                android:text="Sensex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblSensex"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#4682B4"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4">
                <TextView
                    android:text="32500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSensex"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="16dp"  
                    android:textStyle="bold"
                    />
                <TextView
                    android:text="[+1.2 %]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSensexPer"
                    android:textStyle="normal"
                    android:layout_toRightOf="@+id/txtSensex"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/holo_red_dark" 
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/linearLayout1"
            android:id="@+id/linearLayout2">
            <TextView
                android:text="Nifty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblNifty"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:textColor="#4682B4"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4">
                <TextView
                    android:text="12300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNifty"
                    android:gravity="left"
                    android:layout_toLeftOf="@+id/txtNifty"
                    android:textSize="16dp"  
                    android:textStyle="bold"
                        />
                <TextView
                    android:text="[+1.2%]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNiftyPer"
                    android:textStyle="normal"
                    android:textSize="15dp"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/holo_red_dark" 
                        />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"        
        android:id="@+id/textView8"
        android:background="@android:color/darker_gray" />   
   
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/niftyChart"
        android:layout_width="match_parent"        
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rec_rounded"
    />
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"        
        android:id="@+id/textView18"
        android:background="@android:color/darker_gray" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/indiceChart"
        android:layout_width="match_parent"        
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rec_rounded"
    />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:id="@+id/textView9"
        android:background="@android:color/darker_gray" />  

        <RelativeLayout
            android:background="@drawable/rec_rounded"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout11"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:paddingTop="1dp"
            android:paddingBottom="7dp"
            android:layout_marginRight="7dp">
            <TextView
                android:text="Scan stats after last trading day:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLabelScan"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textColor="#4682B4"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:text="Stocks with bullish patterns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBullScan1"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtLabelScan"
            
                />
            <TextView
                android:text="15"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtBullScan"
                android:layout_marginTop="8dp"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_below="@+id/txtLabelScan"
                android:textStyle="bold"
                android:textColor="#0C8106"
                />
                <TextView
                android:text="Stocks with bearish patterns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBearScan1"
                android:layout_marginTop="8dp"
                android:textSize="16dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_below="@+id/txtBullScan1"
                />
            <TextView
                android:text="11"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtBearScan"
                android:layout_marginTop="8dp"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/txtBullScan"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#E43607"
                />
        </RelativeLayout>
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"        
            android:id="@+id/textView81"
            android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="#E8E8E8"
        android:id="@+id/linearLayout51" >
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"                    
            android:layout_alignParentBottom="true"
            android:background="#E8E8E8"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5647159582339728/9879644271">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>
    
</LinearLayout>
</LinearLayout>
</ScrollView>