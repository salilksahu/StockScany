<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/layoutStockItem"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_rounded"
        android:id="@+id/linearLayout1">   
        
        <RelativeLayout            
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1">
            <TextView
                android:id="@+id/txtSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="ICICIBANKDJNX"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="#4682B4" />
            <TextView
                android:text="12300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtStockPrice"
                android:paddingRight="5dp"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif-condensed"
                android:layout_toLeftOf="@+id/txtStockPricePer"
                android:textStyle="bold"
                android:textSize="15dp"            
                />
            <TextView
                android:text="(+1.2%)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtStockPricePer"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/llEventDesc" />
        
        <RelativeLayout            
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2">
            <TextView
                android:id="@+id/txtChangeDaaa1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Change since added: "
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-condensed"
                android:textSize="15dp" />
            <TextView
                android:text="233"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtStockPriceChange"
                android:paddingRight="5dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_toRightOf="@+id/txtChangeDaaa1"
                android:textStyle="bold"
                android:textSize="15dp"            
                />
            <TextView
                android:text="(+1.2%)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtStockPerChange"
                android:layout_toRightOf="@+id/txtStockPriceChange"
                android:textSize="15dp"
                android:fontFamily="sans-serif-condensed"
                />
            <TableLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*" 
                android:layout_alignParentRight="true"
                android:id="@+id/tableLayout3">
                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_height="wrap_content"                
                    android:layout_width="match_parent">
                    <ImageButton
                        android:text="Show Chart"
                        android:id="@+id/btnShowChart"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:src="@drawable/chart"      
                        android:scaleType="centerInside"
                        android:background="#FFFFFF"
                        />
                    <ImageButton
                        android:text="Remove"
                        android:id="@+id/btnShowChartR"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:src="@drawable/delete"      
                        android:scaleType="centerInside"
                        android:background="#FFFFFF"
                        />                
                </TableRow>            
            </TableLayout>
        </RelativeLayout>
        
    </LinearLayout>
</RelativeLayout>   
